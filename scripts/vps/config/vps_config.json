{
  "vps": {
    "host": "159.89.90.90",
    "user": "root",
    "ssh_key": "~/.ssh/quranbot_vps",
    "port": 22,
    "connection_timeout": 30,
    "command_timeout": 60
  },
  "bot": {
    "service_name": "quranbot",
    "install_path": "/opt/quranbot",
    "data_path": "/opt/quranbot/data",
    "log_path": "/var/log/quranbot",
    "backup_path": "/opt/quranbot/backups",
    "python_path": "/opt/quranbot/venv/bin/python",
    "main_script": "src/bot.py",
    "config_file": "config.json",
    "auto_restart": true,
    "restart_delay": 5,
    "max_restarts": 3
  },
  "monitoring": {
    "enabled": true,
    "check_interval": 60,
    "metrics": {
      "cpu_threshold": 80,
      "memory_threshold": 80,
      "disk_threshold": 90
    },
    "alerts": {
      "discord_webhook": "",
      "email": ""
    }
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s [%(levelname)s] %(message)s",
    "date_format": "%Y-%m-%d %H:%M:%S",
    "max_size": "100M",
    "backup_count": 30,
    "compress": true
  },
  "backup": {
    "schedule": "0 4 * * *",
    "retention_days": 30,
    "include_logs": false,
    "compress": true,
    "remote_backup": {
      "enabled": false,
      "type": "s3",
      "bucket": "",
      "access_key": "",
      "secret_key": ""
    }
  },
  "deployment": {
    "auto_restart_on_update": true,
    "run_tests_before_deploy": true,
    "backup_before_deploy": true,
    "rollback_on_failure": true,
    "migration_timeout": 300
  },
  "security": {
    "fail2ban_enabled": true,
    "firewall_enabled": true,
    "auto_security_updates": true,
    "log_security_events": true
  },
  "local": {
    "log_download_path": "./logs/vps",
    "backup_download_path": "./backups/vps",
    "temp_path": "./temp/vps",
    "editor": "notepad",
    "browser": "chrome"
  }
} 